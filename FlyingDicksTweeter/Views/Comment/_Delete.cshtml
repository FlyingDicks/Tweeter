@model FlyingDicksTweeter.Models.Comment
@using (Html.BeginForm("Delete", "Comment", Model, FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="pull-left">

        @Html.AntiForgeryToken()
        @Html.ValidationSummary()

        @Html.HiddenFor(m => m.Author)

        <div class="form-group">
            <div class="col-sm-12 text-center">
                <div class="alert-danger">Are you sure you want to do this ?</div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-4 col-sm-offset-3">
                <input type="submit" value="Submit" class="btn btn-danger" />
            </div>
        </div>
    </div>
}
