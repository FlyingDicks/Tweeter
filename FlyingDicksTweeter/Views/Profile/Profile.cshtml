
@model List<FlyingDicksTweeter.Models.Post>
@{
    ViewBag.Title = "Profile";
}

<h2>@ViewBag.Username 's Profile </h2>

<div class="container">
    <div class="row">
        <div class="col-md-4">
           
        </div>

    </div>
</div>

<div class="container">
    <div class="row">
        @foreach (var image in Model)
        {

            <div class="col-md-12">
                <hr />
                @if (image.Content != null)
                {
                    <p>
                        @image.Content
                    </p>
                }
                @if (image.Image != null)
                {

                    var base64 = Convert.ToBase64String(image.Image);
                    var imgsrc = string.Format("data:image/gif;base64,{0}", base64);
                    <a href="/Profile/Gallery/@image.Author.Id">
                        <img src="@imgsrc" style="width:480px; height:360px" />
                    </a>
                }
                <p>
                    @image.DateAdded.Day - @image.DateAdded.Month - @image.DateAdded.Year
                </p>
                <hr />
            </div>
        }
    </div>
</div>