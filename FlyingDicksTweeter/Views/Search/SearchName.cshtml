@model IEnumerable<FlyingDicksTweeter.Models.AspNetUsers>

<p>
    @using (Html.BeginForm("SearchName", "Search", FormMethod.Get))
    {
    <p>
        Name: @Html.TextBox("SearchName") <br />
        <input type="submit" value="Filter" />
    </p>
    }
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {

            <tr>
                @if (!item.Email.Equals("admin@admin.com"))
                {
                    <td>
                        <a href="../Profile/Profile/@item.Id">
                            @Html.DisplayFor(modelItem => item.FullName)
                        </a>
                    </td>
                    <td>
                        <a href="../Profile/Profile/@item.Id">
                            @Html.DisplayFor(modelItem => item.Email)
                        </a>
                    </td>
                    <td>
                        <a href="../Profile/Profile/@item.Id">
                            @Html.DisplayFor(modelItem => item.UserName)
                        </a>
                    </td>
                
                }
           </tr>     
        }

    </table>
